@model IEnumerable<IzinUygulamasi.Models.izinler>

@{
    Layout = "~/Views/Shared/_PersonelLayout.cshtml";
    ViewBag.Title = "Personel Ana Sayfa";
    ViewBag.Menu = "panasayfa";
}

@section footerJs
{
    <script>
        $(document).ready(function ()
        {
            $('#izinTable').DataTable(
            {
                responsive: true,
                "order": [0,'desc']

            });
        });
    </script>
}
<div class="utils__content">
    <div class="row">
        <div class="col-lg-12">
            <div class="utils__title utils__title--flat mb-3">
                <span class="text-uppercase font-size-16">Istatistikler</span>
            </div>
            <div class="row">
                <div class="col-xl-4">
                    <div class="card chartCard">
                        <div class="chartCard__amount">@ViewBag.kalanIzinGunSayisi</div>
                        <div class="chartCard__title">Kalan İzin Gün Sayısı</div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="card chartCard">
                        <div class="chartCard__amount">@ViewBag.toplamKullanilanIzinGunSayisi</div>
                        <div class="chartCard__title">Toplam Kullanılan İzin Gün Sayısı</div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="card chartCard">
                        <div class="chartCard__amount">@ViewBag.enSonIzinTarihi</div>
                        <div class="chartCard__title">En Son Kullanılan İzin Tarihi</div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="card">
        <div class="card-header">
            <span class="utils__title">
                <strong>Son 5 İzin Bilgisi</strong>
            </span>
        </div>
        <div class="card-body">
            <table class="table table-hover nowrap" id="izinTable">
                <thead class="thead-default">
                    <tr>
                        <th class="d-none">İzin Id</th>
                        <th>İzin Türü</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Bitiş Tarihi</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="d-none">
                                @Html.DisplayFor(modelItem => item.izin_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.izin_turu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.baslangic_tarihi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bitis_tarihi)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>