<body class="config--vertical config--borderLess menu-left--colorful menu-left--shadow">

    <div class="container mt-1 pt-2">
        <div class="card mx-auto border-0">
            <h3 class="text-center mb-3 mt-3">İzin Uygulaması Personel Giriş Sayfası</h3>
        </div>
        <div class="card mx-auto border-0" style="margin-top:-25px">
            <div class="card-header border-bottom-0 bg-transparent">
                <ul class="nav nav-tabs justify-content-center pt-4" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active text-primary" id="pills-login-tab" data-toggle="pill" href="#kLogin" role="tab" aria-controls="pills-login"
                           aria-selected="true">Personel Girişi</a>
                    </li>
                </ul>
            </div>

            <div class="card-body pb-4">
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="kLogin" role="tabpanel" aria-labelledby="pills-login-tab">
                        @using (Html.BeginForm("PersonelGiris", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.p_kullanici_adi, new { @class = "form-control", id = "username", placeholder = "Kullanıcı Adı", required = "required" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.p_kullanici_sifre, new { @class = "form-control password", id = "password", placeholder = "Şifre", required = "required" })
                            </div>
                            <div class="text-center">
                                <div class="g-recaptcha d-inline-block" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI"></div>
                                <div class="alert alert-danger d-none" id="g-recaptcha1Alert" role="alert"><h3>Lütfen robot olmadığınızı doğrulayın.</h3></div>
                            </div>
                            <div class="text-center pt-2">
                                <input type="submit" id="uLoginRequest" class="btn btn-primary" value="Giriş Yap" />
                            </div>
                            <div class="text-center pt-3">
                                <span class="register-link">
                                    <a href="/Login/AltYonetici" class="utils__link--blue utils__link--underlined">Alt Yönetici Kullanıcı Paneline gitmek için tıklayınız</a>
                                </span>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="card mx-auto border-0" style="margin-top:-25px">
            <h3 class="text-center mb-3 mt-3">Destek: support@izinapp.com</h3>
        </div>
    </div>

    @if (TempData["PersonelGiris"] == "basari")
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: "Bilgi Penceresi",
                html: 'Sisteme başarıyla giriş yapılmıştır.',
                showConfirmButton: true,
                confirmButtonText: 'Tamam'
            }).then(function () {
                window.location = '/Personel/Index';
            });
        </script>
    }

    @if (TempData["PersonelGiris"] == "hata")
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: "Bilgi Penceresi",
                html: 'Hatalı giriş, lütfen tekrar deneyiniz.',
                showConfirmButton: true,
                confirmButtonText: 'Tamam'
            }).then(function () {
                window.location = '/Login/Index';
            });
        </script>
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $('#uLoginRequest').click(function (e) {
                var username = $("#username").val();
                var password = $("#password").val();

                if (username != "" && password != "") {
                    var response = grecaptcha.getResponse();

                    if (response.length == 0) {
                        e.preventDefault();
                        $("#g-recaptcha1Alert").addClass("d-block");
                    }
                }
            });

            $('.password').password({
                eyeClass: '',
                eyeOpenClass: 'icmn-eye',
                eyeCloseClass: 'icmn-eye-blocked'
            });
        });
    </script>

</body>
